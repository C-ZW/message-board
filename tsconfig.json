{
    "compilerOptions": {
        "target": "ES2018",
        "module": "commonjs",
        "declaration": true,
        "sourceMap": true,
        "outDir": "./dist",
        "strict": true,
        "strictNullChecks": true,
        "alwaysStrict": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "strictPropertyInitialization": true,
        "noUnusedLocals": true,
        "esModuleInterop": true
    },
    "include": [
        "src/**/*",
        "src/types"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts"
    ]
}